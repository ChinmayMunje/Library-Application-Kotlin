<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_shade_1"
    android:padding="5dp"
    tools:context=".BookDetailActivity">

    <ImageView
        android:id="@+id/idIVBook"
        android:layout_width="130dp"
        android:layout_height="160dp"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/idTVBookTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/idIVBook"
        android:layout_toRightOf="@id/idIVBook"
        android:padding="3dp"
        android:text="Book Title"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/idTVBookPublisher"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVBookTitle"
        android:layout_marginTop="3dp"
        android:layout_toEndOf="@id/idIVBook"
        android:layout_toRightOf="@id/idIVBook"
        android:padding="3dp"
        android:text="Publisher"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/idTVBookPublisherDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVBookPublisher"
        android:layout_toEndOf="@id/idIVBook"
        android:layout_toRightOf="@id/idIVBook"
        android:padding="3dp"
        android:text="Publisher Date"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/idTVBookPageCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVBookPublisherDate"
        android:layout_toEndOf="@id/idIVBook"
        android:layout_toRightOf="@id/idIVBook"
        android:padding="3dp"
        android:text="Book Page Count"
        android:textColor="@color/white"
        android:textSize="13sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/idIVBook"
        android:layout_above="@id/idBtnBuyBook"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/idTVBookDescription"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:text="Book Description"
            android:textColor="@color/white"
            android:textSize="12sp" />


    </ScrollView>

    <Button
        android:id="@+id/idBtnBuyBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="10dp"
        android:text="Buy Book"
        android:textAllCaps="false"
        android:background="@drawable/button_back"
        app:backgroundTint="@color/yellow_color"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        />


</RelativeLayout>